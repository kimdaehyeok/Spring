<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

<bean id="daoFactory" class="com.spring.chapter2.instancefactorypattern.dao.DaoObjectFactory" />

<!-- Instance를 통한 Factory Pattern을 -->
<bean id="dao" factory-bean="daoFactory" factory-method="getDaoObjectFactory">
	<constructor-arg index="0" value="DaoObejctA" />
</bean>

</beans>